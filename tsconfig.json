{
   "compilerOptions": {
      "strict": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "lib": ["ES2016", "DOM"],
      "moduleResolution": "node",
      "target": "ES2016",
      "module": "ES6",
      "removeComments": true,
      "declaration": true,
      "outDir": "dist"
   },
   "include": [
      "src/**/*"
   ]
}
